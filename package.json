{
  "name": "class-attendance-api",
  "version": "0.2.0",
  "description": "An API for checking, tracking, and submitting class/course presence for students.",
  "main": "app.js",
  "scripts": {
    "start:dev": "NODE_ENV=development nodemon ./app.js",
    "start:test": "NODE_ENV=test nodemon ./app.js",
    "start:prod": "NODE_ENV=production nodemon ./app.js",
    "build:patch": "npm version patch",
    "build:minor": "npm version minor",
    "build:major": "npm version major",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "db:push": "prisma db push",
    "db:reset": "prisma db push --force-reset",
    "db:seed": "prisma db seed",
    "test:unit:auth": "NODE_ENV=test jest ./tests/units/auth.unit.test.js --detectOpenHandles --coverage",
    "test:integration:auth": "NODE_ENV=test jest ./tests/integrations/auth.integration.test.js --detectOpenHandles --coverage"
  },
  "keywords": [
    "api",
    "student",
    "school",
    "attendance",
    "presence"
  ],
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "jest": {
    "collectCoverage": true
  },
  "author": "Bibbeep",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/eslint": "^9.6.1",
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.9",
    "dotenv": "^16.4.7",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "prisma": "^6.1.0",
    "supertest": "^7.0.0"
  },
  "dependencies": {
    "@prisma/client": "^6.1.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "joi": "^17.13.3",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.16",
    "speakeasy": "^2.0.0"
  }
}
